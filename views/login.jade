extends layout/layout

block content
  .page-login
    h1  登陆
    .user.flex
      label 用户名:
      input(id='user' placeholder='输入用户名')
    .password.flex
      label 密码:
      input(id='password' placeholder='输入密码')
    .loginflex  
      .button.btn.btn-info.btn-lg 登陆
  script(src='/js/index.js')
  script.
    $('.button').click(function(){
      if(true){
        $.ajax({
          'url':'/login/submit',
          'data':{
            'name': $("#user").val(),
            'password': $("#password").val()
          },
          'dataType':'json',
          'success':function(data){
            if(data['res'] == 'success'){
              location.href = '/'
            }
          },
          'error':function(error){
            console.log(error)
          }
        })
      }
    });

    
